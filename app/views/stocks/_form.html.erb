

<h4>
<%=form_for @stock do |f|%>

    <div class="col-lg-12 mt-5">
      <% if flash[:alert] %>
        <div class="alert alert-warning"><%= flash[:alert] %></div>
      <% end %>
    <div class="mx-auto mt-5" style="width: 400px">

    <% if stock.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

        <ul>
        <% stock.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.label :ticker, "Ticker: " %>
    <%= f.select :ticker, ['MMM', 'AXP', 'AAPL', 'BA', 'CAT', 'CVX', 'CSCO', 'KO', 'DIS', 'DOW', 'XOM', 'GS', 'HD', 'IBM', 'INTC', 'JNJ', 'JPM', 'MCD', 'MRK', 'MSFT', 'NKE', 'PFE', 'PG', 'TRV', 'UTX', 'UNH', 'VZ', 'V', 'WMT', 'WBA']%>

    <br/>

    <%= f.label :shares, "Shares: " %>
    <%= f.number_field :shares %>
    <br>
    
    <%= f.submit "Buy the stock" %> 

<% end %>
</h4>




